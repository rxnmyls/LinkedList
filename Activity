import java.util.LinkedList;
public class ActivityLinkedListJava {
    public static void main(String[] args) {
        LinkedList<String> fruits = new LinkedList<>();
        fruits.add("apple");
        fruits.add("banana");
        fruits.add("cherry");
        System.out.println("Initial list of fruits: " + fruits);
        fruits.addFirst("orange");
        System.out.println("List after adding orange: " + fruits);
        fruits.remove("banana");
        System.out.println("List after removing banana: " + fruits);
        String fruitAtIndex1 = fruits.get(1); 
        System.out.println("Element at index 1: " + fruitAtIndex1);
        int size = fruits.size();
        System.out.println("Size of the list: " + size);
        
        System.out.println("\nFinal list with indices:");
        for (int i = 0; i < size; i++) {
            System.out.println("Index " + i + ": " + fruits.get(i));
        }
    }
}
